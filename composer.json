{
    "name": "mwf/wp-theme-boilerplate",
    "description": "WP Plugin/Theme Library",
    "type": "library",
    "license": "GPL-2.0+ <http://www.gnu.org/licenses/gpl-2.0.txt>",
    "authors": [
        {
            "name": "Bob Moore",
            "email": "bob.moore@midwestfamilymadison.com"
        }
    ],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"optimize-autoloader" : false,
		"platform" :
		{
			"php": "8.1"
		},
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"phpstan/extension-installer": true,
			"wpify/scoper": true
		}
	},
	"autoload": {
		"psr-4": {
			"Mwf\\Theme\\" : "inc"
		}
	},
	"repositories": [
		{
            "url": "https://github.com/MDMDevOps/wp-scripts-config",
            "type": "git"
        }
    ],
	"require": {
		"mwf/wp-scripts-config": "dev-main"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.7",
		"phpunit/phpunit": "^9.6",
		"symfony/var-dumper": "^6.0",
		"wp-coding-standards/wpcs": "^3.0",
		"phpstan/phpstan": "^1.10",
		"szepeviktor/phpstan-wordpress": "^1.3",
		"phpcsstandards/phpcsutils": "^1.0",
		"wpify/scoper": "^3.2"
	},
	"scripts": {
		"phpstan": "vendor/bin/phpstan analyze -c tests/phpstan/phpstan.neon --memory-limit=2048M",
		"phpsniff" : "vendor/bin/phpcs inc -v --standard='tests/phpcs.xml'",
		"phpsniff:fix" : "vendor/bin/phpcbf inc -v --standard='tests/phpcs.xml'",
		"phpsniff:default" : "vendor/bin/phpcs inc -v",
		"phpsniff:PSR12" : "vendor/bin/phpcs inc -v --standard='PSR12'",
		"phpsniff:PSR2" : "vendor/bin/phpcs inc -v --standard='PSR2'",
		"phpsniff:WP" : "vendor/bin/phpcs inc/Abstracts -v --standard='WordPress'",
        "post-root-package-install" : [
            "bash post-install.sh"
        ]
    },
	"extra": {
		"wpify-scoper": {
			"prefix": "Mwf\\Theme\\Deps",
			"folder": "deps",
			"globals": [
			  "wordpress",
			  "woocommerce"
			],
			"composerjson": "composer-deps.json",
			"composerlock": "composer-deps.lock",
			"autorun": false
		}
	}
}
